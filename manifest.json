{
  "manifest_version": 3,
  "name": "Chrome Assistant Workspace",
  "version": "0.1.0",
  "description": "AI Assistant with tldraw canvas, knowledge graph, and DevTools MCP",
  "permissions": [
    "sidePanel",
    "contextMenus",
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "dist/service-worker.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "dist/sidepanel.html"
  },
  "action": {
    "default_title": "Open Assistant Workspace"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["dist/assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
